@{
  Layout = "_Layout"
}

@using Restaurants.Models;
@model List<Restaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants have been added yet!</h3>
}

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.RestaurantName}", "Details", new { id = restaurant.RestaurantId}) : @restaurant.CuisineId</li>
}

<p>@Html.ActionLink("Add new Restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>