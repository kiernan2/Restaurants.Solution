@using Restaurants.Models;
@model List<Restaurants.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisines have been added yet!</h3>
}

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.CuisineName}", "Details", new { id = cuisine.CuisineId })</li>
}

<p>@Html.ActionLink("Add new Cuisine", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>