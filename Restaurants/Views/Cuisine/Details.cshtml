@{
  Layout = "_Layout";
}

@using Restaurants.Models;
@model Restaurants.Models.Cuisine;

<h2>Cuisine details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.CuisineName)</h3>

<ul>
  @if (@Model.RestaurantsList.Count == 0)
  {
    <p>No restaurants found</p>
  }

  @foreach (Restaurant restaurant in @Model.RestaurantsList)
  {
    <li>Name: @restaurant.RestaurantName</li>
  }
</ul>

<p>@Html.ActionLink("Edit Cuisine","Edit", new {id = Model.CuisineId})</p>
<p>@Html.ActionLink("Delete Cuisine", "Delete", new {id = Model.CuisineId})</p>
<p>@Html.ActionLink("Back to Cuisine", "Index")</p>